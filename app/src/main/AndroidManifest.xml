<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.goldfish.sevenseconds">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        tools:replace="android:label"
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="7S"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.goldfish.sevenseconds.activities.LogActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.goldfish.sevenseconds.activities.BarActivity" />
        <activity android:name="com.goldfish.sevenseconds.activities.MemorySheetActivity" />
        <activity android:name="com.goldfish.sevenseconds.activities.RegisterActivity"></activity>
        <activity android:name="com.goldfish.sevenseconds.activities.SettingActivity"/>
        <activity android:name="com.goldfish.sevenseconds.activities.InformationActivity"/>
        <activity android:name="com.goldfish.sevenseconds.activities.MessageActivity"/>
        <activity android:name="com.goldfish.sevenseconds.activities.MyFollowActicity"/>
        <activity android:name="com.goldfish.sevenseconds.activities.PhotographActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity android:name=".activities.SelectPhotoActivity"/>
    </application>

</manifest>