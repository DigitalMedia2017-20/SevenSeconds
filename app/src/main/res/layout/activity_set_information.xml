<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:baselineAligned="false">

    <android.support.v7.widget.Toolbar
        android:id="@+id/square_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/shellowyellow"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <ImageView
            android:id="@+id/set_info_back"
            android:layout_marginLeft="15dp"
            android:alpha="0.5"
            android:src="@drawable/ic_navigate_before_black_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/set_info_title"
            android:text="个人信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/lightorange"
            android:textSize="24sp" />

        <Button
            android:id="@+id/set_info_save"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:background="@drawable/title_follow_bg"
            android:layout_centerVertical="true"
            android:layout_width="55dp"
            android:text="保存"
            android:textColor="@color/color_white"
            android:layout_height="30dp" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/set_face_layout"
        android:background="@drawable/set_info_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">
        <TextView
            android:text="头像"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/set_face"
            android:layout_alignParentRight="true"
            android:src="@drawable/app_icon"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_gravity="center"
        app:layout_widthPercent="90%"
        android:layout_height="1px"
        android:background="#50000000" />

    <RelativeLayout
        android:id="@+id/set_name_layout"
        android:background="@drawable/set_info_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">
        <TextView
            android:text="昵称"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/set_name"
            android:text="未填写"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_gravity="center"
        app:layout_widthPercent="90%"
        android:layout_height="1px"
        android:background="#50000000" />

    <RelativeLayout
        android:id="@+id/user_account_layout"
        android:background="@drawable/set_info_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">
        <TextView
            android:text="账号"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/user_account"
            android:text="未知"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_sex_layout"
        android:layout_marginTop="20dp"
        android:background="@drawable/set_info_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">
        <TextView
            android:text="性别"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/set_sex"
            android:text="未填写"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_gravity="center"
        app:layout_widthPercent="90%"
        android:layout_height="1px"
        android:background="#50000000" />

    <RelativeLayout
        android:id="@+id/set_birthday_layout"
        android:background="@drawable/set_info_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">
        <TextView
            android:text="出生年月"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/set_birthday"
            android:text="未填写"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_gravity="center"
        app:layout_widthPercent="90%"
        android:layout_height="1px"
        android:background="#50000000" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/set_introduction_layout"
        android:background="@drawable/set_info_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">
        <TextView
            android:text="个人简介"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/set_introduction"
            android:hint="给自己贴加上标签吧"
            android:gravity="right"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            app:layout_widthPercent="70%"
            android:layout_alignParentRight="true"
            android:lines="1"
            android:maxLength="30"
            android:layout_height="wrap_content" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentLinearLayout>