<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <RelativeLayout
        android:id="@+id/amem_title_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.goldfish.sevenseconds.view.CircleImageView
            android:id="@+id/amem_title_face"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/app_icon"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/amem_title_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/amem_title_name"
                android:layout_marginTop="3dp"
                android:text="穿睡服的金鱼"
                android:textSize="10.5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/amem_title_intro"
                android:layout_below="@+id/amem_title_name"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:textSize="10.5sp"
                android:text="中山大学/深圳高级中学啊啊啊啊啊啊啊啊"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxEms="15"/>

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/amem_title_follow_btn"
        android:textColor="@color/color_white"
        android:background="@drawable/title_follow_bg"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text=" + 关注"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:visibility="visible"/>

    <Button
        android:id="@+id/amem_title_unfollow_btn"
        android:textColor="@color/color_white"
        android:background="@drawable/title_follow_bg"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="已关注"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:visibility="gone"/>

</RelativeLayout>