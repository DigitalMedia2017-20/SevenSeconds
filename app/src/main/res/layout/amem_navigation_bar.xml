<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/shellowyellow">

    <TextView
        android:id="@+id/nav_bar_edit"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="留下你的足迹"
        app:layout_widthPercent="45%"
        android:background="@drawable/nav_bar_edit_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"/>


    <com.zhy.android.percent.support.PercentLinearLayout
        android:gravity="center_vertical"
        android:id="@+id/nav_bar_function"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">


        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/nav_bar_add_layout"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/nav_bar_add"
                android:src="@drawable/ic_add_box_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />

            <TextView
                android:id="@+id/add_count"
                android:visibility="invisible"
                android:text="99+"
                android:layout_marginTop="2dp"
                android:layout_alignRight="@+id/nav_bar_add"
                android:background="@drawable/red_point"
                android:gravity="center"
                android:lines="1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="6sp"
                android:layout_width="12dp"
                android:layout_height="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/nav_bar_like_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/nav_bar_like"
                android:src="@drawable/ic_sentiment_very_satisfied_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:text="99+"
                android:id="@+id/like_count"
                android:visibility="invisible"
                android:layout_marginTop="2dp"
                android:layout_alignRight="@+id/nav_bar_like"
                android:background="@drawable/red_point"
                android:backgroundTint="@color/lightcoral"
                android:gravity="center"
                android:lines="1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="6sp"
                android:layout_width="12dp"
                android:layout_height="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/nav_bar_review_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/nav_bar_review"
                android:src="@drawable/ic_comment_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.4"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:text="99+"
                android:visibility="invisible"
                android:id="@+id/review_count"
                android:layout_marginTop="2dp"
                android:layout_alignRight="@+id/nav_bar_review"
                android:background="@drawable/red_point"
                android:backgroundTint="@color/lightcoral"
                android:gravity="center"
                android:lines="1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="6sp"
                android:layout_width="12dp"
                android:layout_height="12dp" />

        </RelativeLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>