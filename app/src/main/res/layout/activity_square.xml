<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_square"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.goldfish.sevenseconds.activities.BarActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/square_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/shellowyellow"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>

    <com.ycl.tabview.library.TabView
        android:id="@+id/tabView_square"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/square_toolbar">
    </com.ycl.tabview.library.TabView>
</RelativeLayout>
