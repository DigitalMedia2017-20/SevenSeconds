<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:fillViewport="false"
        android:layout_above="@+id/nav_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.goldfish.sevenseconds.view.AmemTitle
                android:id="@+id/amem_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_below="@+id/amem_bar"
                android:id="@+id/activity_amem"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/amem_cover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/memory_test">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="#50000000"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/view" />

                    </com.zhy.android.percent.support.PercentRelativeLayout>

                    <TextView
                        android:background="@drawable/label_bd"
                        android:textSize="10.5sp"
                        android:gravity="center"
                        android:text="海贼王"
                        android:lines="1"
                        android:textColor="@color/color_white"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="3.5dp"
                        android:paddingRight="3.5dp"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1.5dp"
                        android:background="@color/color_white"
                        android:layout_alignLeft="@+id/memorysheet_title"
                        android:layout_alignRight="@+id/memorysheet_title" />

                    <TextView
                        android:id="@+id/memorysheet_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textSize="20sp"
                        android:textColor="@color/color_white"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"
                        android:text="第一次因为动漫哭泣" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1.5dp"
                        android:background="@color/color_white"
                        android:layout_alignLeft="@+id/memorysheet_title"
                        android:layout_toLeftOf="@+id/memorysheet_time"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="29dp"/>

                    <TextView
                        android:id="@+id/memorysheet_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/color_white"
                        android:text="2007年7月"
                        android:layout_marginTop="25dp"
                        android:layout_centerHorizontal="true"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1.5dp"
                        android:background="@color/color_white"
                        android:layout_alignRight="@+id/memorysheet_title"
                        android:layout_toRightOf="@+id/memorysheet_time"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="29dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/amem_context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

