                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/amem_label_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amem_context"
                    android:layout_marginBottom="30dp">

                    <com.goldfish.sevenseconds.view.CircleImageView
                        android:id="@+id/amem_like_image"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="70dp"
                        app:civ_border_color="@color/color_gray"
                        android:background="@drawable/like"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_below="@+id/amem_like_image"
                        android:layout_alignLeft="@+id/amem_like_image"
                        android:layout_alignRight="@+id/amem_like_image"
                        android:text="点赞"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.goldfish.sevenseconds.view.CircleImageView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/amem_admire_image"
                        android:layout_marginTop="50dp"
                        app:civ_border_color="@color/color_gray"
                        android:background="@drawable/red_love"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_below="@+id/amem_admire_image"
                        android:layout_alignLeft="@+id/amem_admire_image"
                        android:layout_alignRight="@+id/amem_admire_image"
                        android:text="赞赏"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.goldfish.sevenseconds.view.CircleImageView
                        android:layout_alignParentRight="true"
                        android:id="@+id/amem_share_image"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="70dp"
                        app:civ_border_color="@color/color_gray"
                        android:background="@drawable/share"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_below="@+id/amem_share_image"
                        android:layout_alignLeft="@+id/amem_share_image"
                        android:layout_alignRight="@+id/amem_share_image"
                        android:text="分享"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <com.goldfish.sevenseconds.view.AmemNav
        android:id="@+id/nav_bar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
