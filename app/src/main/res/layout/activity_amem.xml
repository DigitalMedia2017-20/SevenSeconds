<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">

    <RelativeLayout
        android:id="@+id/activity_amem"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/memorysheet_cover"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/memory_test"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1.5dp"
                    android:background="@color/color_white"
                    android:layout_alignLeft="@+id/memorysheet_title"
                    android:layout_alignRight="@+id/memorysheet_title" />

                <TextView
                    android:id="@+id/memorysheet_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textSize="20sp"
                    android:textColor="@color/color_white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="第一次因为动漫哭泣" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1.5dp"
                    android:background="@color/color_white"
                    android:layout_alignLeft="@+id/memorysheet_title"
                    android:layout_toLeftOf="@+id/memorysheet_time"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="29dp"/>

                <TextView
                    android:id="@+id/memorysheet_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/color_white"
                    android:text="2007年7月"
                    android:layout_marginTop="25dp"
                    android:layout_centerHorizontal="true"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1.5dp"
                    android:background="@color/color_white"
                    android:layout_alignRight="@+id/memorysheet_title"
                    android:layout_toRightOf="@+id/memorysheet_time"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="29dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#50000000"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/view" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp">
            <TextView
                android:id="@+id/memorysheet_brief"
                android:text="海贼王321集——和梅利的最后道别"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"/>

            <View
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/color_blank"
                android:layout_marginTop="40dp"
                android:layout_alignRight="@+id/memorysheet_brief"/>

