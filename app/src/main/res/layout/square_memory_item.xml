<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_gravity="center"
    android:layout_width="290dp"
    android:layout_height="425dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_gravity="center"
        android:id="@+id/memlist_recyler"
        android:layout_width="255dp"
        android:layout_height="425dp"
        android:orientation="vertical"
        android:padding="15dp">
        <ImageView
            android:id="@+id/premem_bgr"
            android:layout_width="255dp"
            android:layout_height="150dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/preview_time"
            android:layout_below="@+id/premem_bgr"
            android:textSize="12sp"
            android:textColor="#b3a6a6a6"
            android:gravity="right"/>
        <TextView
            android:layout_below="@+id/preview_time"
            android:id="@+id/premem_title"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp" />

        <TextView
            android:layout_below="@+id/premem_title"
            android:id="@+id/premem_contents"
            android:layout_width="197.5dp"
            android:layout_height="123dp"
            android:layout_centerInParent="true"
            android:paddingLeft="5dp"
            android:textSize="13sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/premem_contents"
            android:id="@+id/pre_tag"
            android:textSize="12sp"
            android:textColor="#a6a6a6"
            android:gravity="right"/>

        <ImageView
            android:layout_alignParentBottom="true"

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_sentiment_very_satisfied_black_24dp"
            android:alpha="0.4"
            android:layout_toLeftOf="@+id/premem_like_num"
            android:id="@+id/premem_like" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/premem_like_num"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/premem_com"
            android:textSize="12sp"
            android:text="99+" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_comment_black_24dp"
            android:alpha="0.4"
            android:id="@+id/premem_com"
            android:layout_toLeftOf="@+id/premem_com_num"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/premem_com_num"
            android:textSize="12sp"
            android:textColor="#a6a6a6"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="99+"
            android:layout_alignParentRight="true" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/pre_add_36dp"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/premem_button" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>